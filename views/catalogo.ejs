<%- include('partials/header') %>

<h2 class="text-center my-3">Catálogo de Productos</h2>

<form action="/catalogo" method="get" class="row g-2 mb-4">
  <div class="col-md-3">
    <input type="text" name="nombre" class="form-control" placeholder="Buscar por nombre" value="<%= typeof nombre !== 'undefined' ? nombre : '' %>">
  </div>

  <div class="col-md-3">
    <select name="categoria" class="form-select">
      <option value="">Todas las categorías</option>
      <% categorias.forEach(cat => { %>
        <option value="<%= cat.idcategoria %>" <%= categoria == cat.idcategoria ? 'selected' : '' %>><%= cat.categoria %></option>
      <% }); %>
    </select>
  </div>

  <div class="col-md-2">
    <input type="number" step="0.01" min="0" name="precio_min" class="form-control" placeholder="Precio mín" value="<%= typeof precio_min !== 'undefined' ? precio_min : '' %>">
  </div>

  <div class="col-md-2">
    <input type="number" step="0.01" min="0" name="precio_max" class="form-control" placeholder="Precio máx" value="<%= typeof precio_max !== 'undefined' ? precio_max : '' %>">
  </div>

  <div class="col-md-2">
    <button type="submit" class="btn btn-primary w-100">Filtrar</button>
  </div>
</form>

<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 row-cols-lg-5 g-4">
    <% if (productos && productos.length > 0) { %>
      <% productos.forEach(producto => { %>
        <div class="col">
          <div class="card h-100 shadow-sm border-0">
            <img src="<%= producto.imgurl %>" 
              class="card-img-top img-card-fija" 
              alt="Imagen de <%= producto.nombre %>">
              
            <div class="card-body d-flex flex-column">
              <!-- Nombre -->
              <h6 class="card-title text-center text-primary fw-semibold mb-2"><%= producto.nombre %></h6>

              <!-- Descripción -->
              <p class="card-text text-muted small text-center mb-3"><%= producto.descripcion %></p>

              <!-- Precio y Stock -->
              <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-success fw-bold">S/ <%= producto.precio %></span>
                <span class="badge bg-secondary"><%= producto.stock %> en stock</span>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col">
        <div class="alert alert-info text-center">No hay productos disponibles en el catálogo.</div>
      </div>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>
