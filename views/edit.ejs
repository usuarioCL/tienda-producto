<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Editar Producto</title>
</head>
<body>
  <h1>Editar Producto</h1>
  <form action="/producto/edit/<%= producto.id %>" method="POST">
    <label for="nombre">Nombre:</label>
    <input type="text" id="nombre" name="nombre" value="<%= producto.nombre %>" required><br>

    <label for="descripcion">Descripción:</label>
    <textarea id="descripcion" name="descripcion" required><%= producto.descripcion %></textarea><br>

    <label for="precio">Precio:</label>
    <input type="number" id="precio" name="precio" value="<%= producto.precio %>" required><br>

    <label for="stock">Stock:</label>
    <input type="number" id="stock" name="stock" value="<%= producto.stock %>" required><br>

    <label for="id_categoria">Categoría:</label>
    <select id="id_categoria" name="id_categoria">
      <% categorias.forEach(categoria => { %>
        <option value="<%= categoria.id %>" <%= categoria.id == producto.id_categoria ? 'selected' : '' %>><%= categoria.nombre %></option>
      <% }); %>
    </select><br>

    <button type="submit">Actualizar</button>
  </form>
</body>
</html>
