<h2 class="text-center mt-5 mb-5">Añadidos recientemente</h2>

<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% if (productosRecientes && productosRecientes.length  > 0) { %>
      <% productosRecientes.forEach(producto => { %>
        <div class="col">
          <div class="card h-100 shadow-sm border-0">
            <img src="<%= producto.imgurl %>" class="card-img-top img-fluid rounded-top" alt="Imagen de <%= producto.nombre %>">

            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-center text-primary fw-bold"><%= producto.nombre %></h5>

              <p class="card-text small text-muted mb-2"><%= producto.descripcion %></p>

              <ul class="list-group list-group-flush mb-3">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <strong>Precio</strong>
                  <span class="text-success fw-semibold"><%= producto.precio %> USD</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <strong>Stock</strong>
                  <span class="badge bg-secondary rounded-pill"><%= producto.stock %></span>
                </li>
              </ul>

              <div class="mt-auto d-flex justify-content-between">
                <a href="/edit/<%= producto.idproducto %>" class="btn btn-outline-warning btn-sm w-100 me-2">Editar</a>
                <a href="/delete/<%= producto.idproducto %>" class="btn btn-outline-danger btn-sm w-100" onclick="return confirm('¿Estás seguro de que deseas eliminar este producto?');">Eliminar</a>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col">
        <div class="alert alert-info text-center">No hay productos disponibles en el catálogo.</div>
      </div>
    <% } %>
  </div>
</div>